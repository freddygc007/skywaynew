<%- include ('./header.ejs') %>
      
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Update Categories </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Forms</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                </ol>
              </nav>
            </div>
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                        <h4 class="card-title">Edit Categories</h4>
                        <p class="card-description"> Enter the details </p>
                        <form class="forms-sample" method="post" action="/admin/editcollection?_method=PUT">
                          <div class="mb-4">
                            <label for="product_name" class="form-label">Change Sub Category Name</label>
                            <input type="hidden" name="id" value="<%=data._id %>">
                            <input type="text" name="name" placeholder="Type here" class="form-control" id="product_name" value="<%=data.name%>"required />
                        </div>
                        <div class="form-group">
                          <label >Change Sub Category</label>
                          <div >
                            <select class="form-control" name="parentId">
                              <option name="parentId" value="">Select Categories</option>
                              <% if (alldata.length>0) { %>
                              <% for (let i = 0; i<alldata.length; i++) { %>
                              <% if (!alldata[i].parentId) { %>
                                  <option name="parentId" value="<%= alldata[i]._id%>"><%= alldata[i].name %></option>
                                <% } %>
                            <% } %>
                            <% } %>
                          </select>
                          </div>
                        </div>
                          <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                          <a href="/admin/collections" class="btn btn-light">Cancel</a>
                        </form>
                      </div>
                    </div>
                  </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
              <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright Â© bootstrapdash.com 2021</span>
              <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin template</a> from Bootstrapdash.com</span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
