                        </ul>
                      </div>
                    </div>
                  </div>
                  <table class="table table-borderless">
                    <% for(let key of orders.products.item) { %>
    
                      <tbody>
                        <tr>
                          <td>
                            <div class="d-flex mb-2">
                              <div class="flex-shrink-0">
                                <img src="uploads/<%=key.productId.productPictures[0].img%>" alt="" width="70" class="img-fluid">
                              </div>
                              <div class="flex-lg-grow-1 ms-3">
                                <h6 class="small mb-0"><a href="#" class="text-reset">
                                    <%=key.productId.name%>
                                  </a></h6>
                                <span class="small">Color: Black</span>
                              </div>
                            </div>
                          </td>
                          <td>quantity:<%=key.qty%>
                          </td>
                          <td class="text-end">amount:<%=key.productId.price%>
                          </td>
                        </tr>
                        <% } %>
